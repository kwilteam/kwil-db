{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            // An issue with the gentx command not working but not giving an 
            // error needs to be resolved.
            // Use "ignite chain serve" for now
            "name": "DO NOT USE -- Serve w/ Reset",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwil-cosmos/cmd/kwild",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags" : ["--only-same-user=false"],
            "args": ["start", "--home", "${userHome}/.kwildb/chain", "--dbg-reset"]
        },
        {
            "name": "Chain Serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwil-cosmos/cmd/kwild",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags" : ["--only-same-user=false"],
            "args": ["start", "--home", "${userHome}/.kwildb/chain", "--dbg-run"]
        },
        {
            "name": "Create-Db-Once",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwil-cosmos/cmd/kwild",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags" : ["--only-same-user=false"],
            "args": ["tx", "kwil", "create-database", "postResetDb", "--from", "alice", "-y", "--home", "${userHome}/.kwildb/chain" ]
        },
        {
            "name": "ETH CLI CMD",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags" : ["--only-same-user=false"],
            "cwd": "${workspaceFolder}"
        }
    ]
}